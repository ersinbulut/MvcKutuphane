@model List<MvcKutuphane.Models.Entity.TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-bordered">
    <tr style="background-color:rgb(252,178,22)">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GUNCELLE</th>
        <th>YAZARIN KİTAPLARI</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>@item.SOYAD</td>
            <td>@Html.ActionLink("Sil","YazarSil",new {id=item.ID},new {@class="btn btn-danger",onclick="return confirm('Silmek istiyor musunuz?')"})</td>
            <td><a href="/Yazar/YazarGuncelle/@item.ID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Yazar/YazarKitaplar/@item.ID" class="btn btn-success" style="background-color:lightblue">Yazarın Kitapları</a></td>
        </tr>
    }
</table>
<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a>
