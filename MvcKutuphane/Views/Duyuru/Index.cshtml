@model IEnumerable<MvcKutuphane.Models.Entity.TBLDUYURULAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    string renk = "";
}

<h2>Duyurular</h2>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<table class="table table-bordered">
    <tr>
        <th>DUYURU NO</th>
        <th>KATEGORİ</th>
        <th>TARİH</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>İÇERİK</th>
    </tr>


    @foreach (var item in Model)
    {
        if (item.KATEGORİ == "Diğer")
        {
            renk = "bg-info text-white";
        }
        if (item.KATEGORİ == "Yeni Kitap")
        {
            renk = "bg-warning text-white";
        }
        if (item.KATEGORİ == "İletişim")
        {
            renk = "bg-success text-white";
        }
        if (item.KATEGORİ == "Kitapları Geciktirmeyin")
        {
            renk = "bg-danger text-white";
        }

        <tr class="@renk">
            <td>@item.ID</td>
            <td>@item.KATEGORİ</td>
            <td>@Convert.ToDateTime(item.TARİH).ToString("dd/MM/yyyy")</td>
            <td><a href="/Duyuru/DuyuruSil/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Duyuru/DuyuruGuncelle/@item.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Duyuru/DuyuruGuncelle/@item.ID" class="btn btn-success" style="background-color:skyblue;">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Duyuru/DuyuruEkle/" class="btn btn-primary">Yeni Duyuru Ekle</a>
